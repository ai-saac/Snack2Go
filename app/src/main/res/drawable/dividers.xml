<!-- custom_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo transparente -->
    <item android:drawable="@android:color/transparent" />

    <!-- Borde derecho -->
    <item
        android:left="1dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/secondary_color" />
        </shape>
    </item>
    <!-- Borde inferior -->
    <item
        android:left="0dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="@color/background" />
        </shape>
    </item>
</layer-list>
